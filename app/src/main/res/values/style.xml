<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Bottom Navigation Theme-->
    <style name="MyBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/my_bottom_navigation_view_color</item>
        <item name="itemTextColor">@color/my_bottom_navigation_view_color</item>
        <item name="itemRippleColor">@color/my_navigation_bottom_ripple_color</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationTextAppearance</item>
    </style>

    <style name="BottomNavigationTextAppearance" parent="TextAppearance.MyTheme.Caption">
        <item name="fontFamily">@font/primary_bold</item>
        <item name="android:fontFamily">@font/primary_bold</item>
    </style>

    <!-- Bottom Navigation Theme-->

    <style name="Theme.DigiShoe.Auth.Button" parent="Theme.DigiShoe.Auth">
        <item name="android:backgroundTint">?colorOnBackground</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:radius">8dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Theme.DigiShoe.Auth.et" parent="Theme.DigiShoe.Auth">
        <item name="android:textColorHint">#48ffffff</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:radius">8dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">?colorOnBackground</item>
        <item name="android:background">@drawable/background_et_auth</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="purchaseShippingEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="profileShapeableView">
        <item name="cornerSize">50%</item>
    </style>

    <style name="TextViewProfileView">
        <item name="android:drawablePadding">16dp</item>
        <item name="android:textAppearance">?textAppearanceBody1</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
</resources>